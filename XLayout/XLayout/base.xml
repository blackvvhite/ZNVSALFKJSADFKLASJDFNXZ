<UIView layout_edge="{5,5,-5,-5}" backgroundColor="@color:FFD39B">
    <UIView layout_edge="{5,5,-5,-5}" layout>
        <UIView layout_id="top_view"  layout_top_left="{10,10}" layout_right="-5" layout_height="100" backgroundColor="@color:4169E1">
            <UIView layout_edge="{30,30,-30,-30}" backgroundColor="@color:C1FFC1">
                <UIView layout_top_left="{10,10}" layout_bottom_right="{-10,-10}" backgroundColor="@color:EF2222">
                    <UIView layout_left_right="{10,-10}" layout_top_bottom="{10,-10}" backgroundColor="@color:B23AEE">
                        
                    </UIView>
                </UIView>
            </UIView>
        </UIView>
        <import name="red_view" layout_id="red_view" layout_below="@id:top_view:5" layout_right="@id:top_view:-5" layout_left="@id:top_view:5" layout_above="@id:contentView:-5" tap_event="tapEvent:">
        </import>
        <UIView layout_id="contentView" layout_below="@id:red_view:5" layout_left_right="{@id:top_view,@id:top_view}" layout_height="200" layout_bottom="-20" backgroundColor="@color:ff8942">
            <UIView layout_id="aspect_ratio_view" layout_center="0" layout_height="50" layout_aspect_ratio="@id:aspect_ratio_view:5*2" backgroundColor="@color:4169E1" />
        </UIView>
    </UIView>
</UIView>